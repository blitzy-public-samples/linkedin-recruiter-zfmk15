# API Configuration
# Base URL for backend API services (required)
# Must be a valid URL with http/https protocol
VITE_API_BASE_URL=http://localhost:3000

# API version for endpoint versioning (required)
# Must match pattern: v[0-9]+
VITE_API_VERSION=v1

# Authentication Configuration (Auth0)
# Auth0 domain for authentication (required)
# Must be a valid domain name
VITE_AUTH_DOMAIN=auth.example.com

# Auth0 client ID for authentication (required)
# Must be a valid Auth0 client ID
VITE_AUTH_CLIENT_ID=your-auth0-client-id

# Auth0 audience for API authorization (required)
# Must be a valid Auth0 audience
VITE_AUTH_AUDIENCE=your-auth0-audience

# Internationalization Settings
# Default application language (optional)
# Must be one of: en,es,fr
VITE_DEFAULT_LANGUAGE=en

# Comma-separated list of supported languages (optional)
# Must be comma-separated ISO language codes
VITE_SUPPORTED_LANGUAGES=en,es,fr

# Theme Configuration
# Default application theme (optional)
# Must be either 'light' or 'dark'
VITE_DEFAULT_THEME=light

# Analytics Configuration
# Enable/disable analytics tracking (optional)
# Must be 'true' or 'false'
VITE_ENABLE_ANALYTICS=true

# API Request Configuration
# Default API request timeout in milliseconds (optional)
# Must be a positive number
VITE_REQUEST_TIMEOUT=30000

# WebSocket Configuration
# WebSocket server URL for real-time updates (required)
# Must be a valid WebSocket URL (ws:// or wss://)
VITE_WEBSOCKET_URL=ws://localhost:3001

# Search Configuration
# Maximum number of search results per page (optional)
# Must be a positive number <= 1000
VITE_MAX_SEARCH_RESULTS=100

# Caching Configuration
# Enable/disable frontend caching (optional)
# Must be 'true' or 'false'
VITE_ENABLE_CACHE=true

# Cache duration in seconds (optional)
# Must be a positive number
VITE_CACHE_DURATION=3600

# Logging Configuration
# Application logging level (optional)
# Must be one of: debug,info,warn,error
VITE_LOG_LEVEL=error