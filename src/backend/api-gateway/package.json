{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for LinkedIn Profile Search and Analysis System",
  "main": "dist/app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "security:audit": "npm audit && snyk test",
    "docker:build": "docker build -t api-gateway ."
  },
  "dependencies": {
    "express": "4.18.2",
    "cors": "2.8.5",
    "helmet": "7.0.0",
    "compression": "1.7.4",
    "morgan": "1.10.0",
    "jsonwebtoken": "9.0.2",
    "winston": "3.10.0",
    "express-rate-limit": "7.0.0",
    "express-validator": "7.0.1",
    "dotenv": "16.4.7",
    "dd-trace": "4.0.0",
    "prom-client": "14.2.0"
  },
  "devDependencies": {
    "typescript": "5.2.2",
    "@types/express": "4.17.17",
    "@types/node": "18.16.0",
    "@types/jest": "29.5.3",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "eslint": "8.49.0",
    "prettier": "3.0.3",
    "ts-node-dev": "2.0.0",
    "snyk": "1.1187.0",
    "husky": "8.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/linkedin-profile-search.git"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "typescript",
    "express"
  ],
  "author": "LinkedIn Profile Search Team",
  "license": "UNLICENSED",
  "private": true
}